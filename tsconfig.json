{
  "compilerOptions": {
    "target": "ES2020",                 // Modern ES target
    "module": "CommonJS",              // For Node.js compatibility
    "outDir": "./dist",                // Compiled files output folder
    "rootDir": "./src",                // Keeps source files in src
    "strict": true,                    // Enforces strict type checking
    "esModuleInterop": true,           // Import compatibility for CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true               // Speeds up compilation
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
